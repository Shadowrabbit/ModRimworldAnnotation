<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="ShuttleSkyfallerBase" ParentName="SkyfallerBase" Abstract="True">
    <size>(5,3)</size>
    <graphicData>
      <texPath>Things/Building/Misc/Shuttle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(6,3)</drawSize>
      <color>(162,164,149)</color>
    </graphicData>
    <skyfaller>
      <movementType>Decelerate</movementType>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(5.5,3.5)</shadowSize>
      <motesPerCell>1</motesPerCell>
    </skyfaller>
  </ThingDef>
  
  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>ShuttleIncoming</defName>
    <label>shuttle (incoming)</label>
    <thingClass>ShuttleIncoming</thingClass>
    <skyfaller>
      <anticipationSound>Shuttle_Landing</anticipationSound>
      <anticipationSoundTicks>250</anticipationSoundTicks>
      <ticksToImpactRange>200~250</ticksToImpactRange>
      <angleCurve>
        <points>
          <li>(0,-60)</li>
          <li>(1,-90)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(0,30)</li>
          <li>(0.5,5)</li>
          <li>(0.9,-5)</li>
          <li>(0.95,0)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0.95,2.5)</li>
          <li>(1,0)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0.6,0.6)</li>
          <li>(0.95,0.1)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>ShuttleLeaving</defName>
    <label>shuttle (leaving)</label>
    <thingClass>DropPodLeaving</thingClass>
    <skyfaller>
      <reversed>true</reversed>
      <anticipationSound>Shuttle_Leaving</anticipationSound>
      <anticipationSoundTicks>-10</anticipationSoundTicks>
      <ticksToImpactRange>-40~-15</ticksToImpactRange>
      <moteSpawnTime>0.05</moteSpawnTime>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(5.5,3.5)</shadowSize>
      <motesPerCell>1</motesPerCell>
      <angleCurve>
        <points>
          <li>(0,90)</li>
          <li>(1,70)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.15,10)</li>
          <li>(0.5,-5)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.08,2)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0,0.2)</li>
          <li>(0.4,0.7)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>ShuttleCrashing</defName>
    <label>shuttle (crashing)</label>
    <thingClass>ShuttleIncoming</thingClass>
    <size>(5,3)</size>
    <skyfaller>
      <ticksToImpactRange>150~200</ticksToImpactRange>
      <movementType>ConstantSpeed</movementType>
      <angleCurve>
        <points>
          <li>(0,-60)</li>
          <li>(1,-90)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(0,20)</li>
          <li>(0.49,5)</li>
          <li>(0.6,5)</li>
          <li>(0.7,3)</li>
          <li>(0.8,3)</li>
          <li>(0.83,-4)</li>
          <li>(0.9,3)</li>
          <li>(0.95,-2)</li>
          <li>(0.98,1)</li>
          <li>(0.99,0)</li>
        </points>
      </rotationCurve>
      <speed>0.8</speed>
      <explosionRadius>3</explosionRadius>
      <explosionDamage>Bomb</explosionDamage>
      <cameraShake>1</cameraShake>
      <metalShrapnelCountRange>
        <min>6</min>
        <max>10</max>
      </metalShrapnelCountRange>
      <rubbleShrapnelCountRange>
        <min>300</min>
        <max>400</max>
      </rubbleShrapnelCountRange>
      <shrapnelDistanceFactor>0.2</shrapnelDistanceFactor>
    </skyfaller>
  </ThingDef>

</Defs>
