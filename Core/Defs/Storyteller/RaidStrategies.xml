  <RaidStrategyDef ParentName="SiegeBase">
    <defName>Siege</defName>
    <workerClass>RaidStrategyWorker_Siege</workerClass>
    <minPawns>4</minPawns>
    <arriveModes>
      <li>EdgeDrop</li>
      <li>EdgeWalkIn</li>
    </arriveModes>
